<h1>Editing post</h1>
<%= form_for :post, url: post_path(@post), method: :patch, html: { multipart: true } do |f| %>
	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |msg| %>
		<div class="alert alert-danger"><%= msg %></div>
		<% end %>
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field(:title, {:class => 'form-control'}) %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area(:body, {:class => 'form-control'}) %>
	</p>

	<p>
		<%= f.label :price, "Price in UAH, â‚´" %><br>
		<%= f.text_area(:price, {:class => 'form-control'}) %>
	</p>

	<h3>Select category</h3>
		<p>
			<%= collection_select(:category, :category_id, Category.all, :id, :name) %>
		</p>

	<h3>Upload photo: </h3>

		<%= f.file_field :photo %><BR>
		<%= f.submit({:class => 'btn btn-primary'}) %>

<% end %>
