<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
 <% @users.each do |user| %>
   <li>

     <%= image_tag user.avatar.url(:thumb) %>
     <%= link_to user.name, user %>, 
     <% if current_user.admin? && !current_user?(user) %>
     	<%= link_to "Delete User", user, method: :delete,
     								data: { confirm: "Are you sure?" } %>
     <% end %>
	<hr>

   </li>
 <% end %>
</ul>